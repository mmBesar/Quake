# vkQuake Server Docker Configuration

# Container paths
CONTAINER_DIR=/path/to/your/containers

# User settings (set to your user ID and group ID)
PUID=1000
PGID=1000

# Server settings
QUAKE_SERVER_NAME="My vkQuake Server"
QUAKE_MAX_PLAYERS=16
QUAKE_PORT=26000

# Game mode (1 = enable, 0 = disable)
QUAKE_DEATHMATCH=1
QUAKE_COOP=0
QUAKE_TEAMPLAY=0
QUAKE_SKILL=1

# Match settings
QUAKE_FRAGLIMIT=20
QUAKE_TIMELIMIT=15

# Map settings
QUAKE_MAP=start
QUAKE_MAP_ROTATION=start,e1m1,e1m2,e1m3,e1m4,e1m5,e1m6,e1m7,e1m8
QUAKE_ROTATION_MODE=1

# Admin settings
QUAKE_ADMIN_PASSWORD=admin123

# Bot settings
QUAKE_ENABLE_BOTS=0
QUAKE_BOT_COUNT=4
QUAKE_BOT_SKILL=1

# Mod support (leave empty for base game)
QUAKE_MOD=

# Debug settings
QUAKE_CONDEBUG=1
